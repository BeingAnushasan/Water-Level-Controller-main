<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Chat">

    <Button
        android:id="@+id/nextView"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Next"
        android:background="@drawable/half_blue_roundshape"
        android:onClick="nextView"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"

        />


<ViewFlipper

    android:id="@+id/view_flipper"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <ImageView
            android:id="@+id/levelViewer"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/battery_60"

            />


        <Button
            android:id="@+id/btnOn"
            android:text="Turn On"
            android:layout_below="@id/levelViewer"
            android:layout_marginTop="5dp"
            android:background="@drawable/half_blue_roundshape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
        <Button
            android:layout_below="@+id/btnOn"
            android:id="@+id/btnOff"
            android:text="Turn Off"
            android:layout_marginTop="5dp"
            android:background="@drawable/half_blue_roundshape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />

    </RelativeLayout>


    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="1000px"
        android:scrollbars="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"/>
    </ScrollView>

    </RelativeLayout>




</ViewFlipper>


</RelativeLayout>
